# ***
# Colors
# ***

# Zsh Colors
zsh_random_color=$((RANDOM % 96 + 160))

# For Zsh PS1
zsh_name_color="%F{${zsh_random_color}}"
zsh_host_color="%F{${zsh_random_color}}"
zsh_path_color="%F{${zsh_random_color}}"

# Holder for response based color changing
zsh_pointer_color="%F{7}"
zsh_new_line=$'\n'

# Bash Colors
bash_black="\[\e[0;30m\]"
bash_red="\[\e[0;31m\]"
bash_green="\[\e[0;32m\]"
bash_yellow="\[\e[0;33m\]"
bash_blue="\[\e[0;34m\]"
bash_purple="\[\e[0;35m\]"
bash_cyan="\[\e[0;36m\]"
bash_white="\[\e[0;37m\]"
bash_reset_color="\[\e[0m\]"
bash_colors=("${bash_red}" "${bash_green}" "${bash_yellow}" "${bash_blue}" "${bash_purple}" "${bash_cyan}" "${bash_white}")
bash_random_color=${bash_colors[$(( RANDOM % ${#bash_colors[@]} ))]}

# For Bash PS1
bash_name_color="${bash_random_color}"
bash_host_color="${bash_random_color}"
bash_path_color="${bash_random_color}"

# Holder for response based color changing
bash_border_color="${bash_white}"
bash_pointer_color="${bash_white}"
bash_at_color="${bash_white}"

# Reset text color
bash_text_color="${bash_reset_color}"
